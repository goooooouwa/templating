<%- model_class = KitChase::Product -%>

<% content_for :header do %>
  <%= render partial: "layouts/header", locals: {active_tab: model_class} %>
<% end %>

<% content_for :content do %>
  <div id="navigation-view">
    <div id="navigation-bar" class="container-fluid">
      <div class="row">
        <div class="col-xs-5">
          <h3 style="margin-top: auto;"><%= t('.title', :default => model_class.model_name.human.pluralize.titleize) %></h3>
        </div>
        <div class="col-xs-7">
          <div class="btn-toolbar pull-right" role="toolbar">
            <div class="btn-group">
              <%= link_to t('.new', :default => t("helpers.links.new")), new_kit_chase_product_path, :class => 'btn btn-primary', title: "New Tender", data: { toggle:"tooltip", placement:"bottom" } %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div id="custom-view">
      <div class="container-fluid">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th><%= model_class.human_attribute_name(:id) %></th>
                <th><%= model_class.human_attribute_name(:description) %></th>
                <th><%= model_class.human_attribute_name(:product_type_id) %></th>
                <th><%= model_class.human_attribute_name(:product_model_id) %></th>
                <th><%= model_class.human_attribute_name(:condition_id) %></th>
                <th><%= model_class.human_attribute_name(:location_id) %></th>
                <th><%= model_class.human_attribute_name(:next_available_at) %></th>
                <th><%= model_class.human_attribute_name(:next_maintenance_at) %></th>
                <th><%= model_class.human_attribute_name(:warranty_expire_at) %></th>
                <th><%= model_class.human_attribute_name(:acquired_at) %></th>
                <th><%= model_class.human_attribute_name(:purchase_price) %></th>
                <th><%= model_class.human_attribute_name(:current_value) %></th>
                <th><%= model_class.human_attribute_name(:decommissioned_at) %></th>
                <th><%= model_class.human_attribute_name(:decommission_note) %></th>
                <th><%= model_class.human_attribute_name(:contact_id) %></th>
                <th><%= model_class.human_attribute_name(:office_id) %></th>
                <th><%= model_class.human_attribute_name(:department_id) %></th>
                <th><%= model_class.human_attribute_name(:created_at) %></th>
                <th><%= model_class.human_attribute_name(:updated_at) %></th>
                <th><%= model_class.human_attribute_name(:identifier) %></th>
              </tr>
            </thead>
            <tbody>
              <% @kit_chase_products.each do |kit_chase_product| %>
              <tr>
                <td><%= kit_chase_product.id %></td>
                <td><%= kit_chase_product.description %></td>
                <td><%= kit_chase_product.product_type_id %></td>
                <td><%= kit_chase_product.product_model_id %></td>
                <td><%= kit_chase_product.condition_id %></td>
                <td><%= kit_chase_product.location_id %></td>
                <td><%= kit_chase_product.next_available_at %></td>
                <td><%= kit_chase_product.next_maintenance_at %></td>
                <td><%= kit_chase_product.warranty_expire_at %></td>
                <td><%= kit_chase_product.acquired_at %></td>
                <td><%= kit_chase_product.purchase_price %></td>
                <td><%= kit_chase_product.current_value %></td>
                <td><%= kit_chase_product.decommissioned_at %></td>
                <td><%= kit_chase_product.decommission_note %></td>
                <td><%= kit_chase_product.contact_id %></td>
                <td><%= kit_chase_product.office_id %></td>
                <td><%= kit_chase_product.department_id %></td>
                <td><%= kit_chase_product.created_at %></td>
                <td><%= kit_chase_product.updated_at %></td>
                <td><%= kit_chase_product.identifier %></td>
                <td>
                  <%= link_to kit_chase_product_path(kit_chase_product) do %>
                    <i class="fa fa-info-circle fa-lg"></i>
                  <% end %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
<% end %>

<%= render template: "layouts/app" %>
