<div id="content" class="container-fluid">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-md-4 col-md-offset-4">
      <%= form_for @suburb, :html => { :class => 'form-horizontal' } do |f| %>
        <% if @suburb.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@suburb.errors.count, "error") %> prohibited this suburb from being saved:</h2>

            <ul>
            <% @suburb.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.label :name, :class => 'control-label' %>
          <div class="controls">
            <%= f.text_field :name, :class => 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :state_id, :class => 'control-label' %>
          <div class="controls">
            <%= f.collection_select(:state_id, State.all, :id, :abbreviation, :class => 'form-control') %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :postcode, :class => 'control-label' %>
          <div class="controls">
            <%= f.text_field :postcode, :class => 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :latitude, :class => 'control-label' %>
          <div class="controls">
            <%= f.text_field :latitude, :class => 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :longitude, :class => 'control-label' %>
          <div class="controls">
            <%= f.text_field :longitude, :class => 'form-control' %>
          </div>
        </div>


        <%= f.submit nil, :class => 'btn btn-primary' %>

      <% end %>
    </div>
  </div>
</div>
