<% content_for :header do %>
  <%= render partial: "layouts/header", locals: {active_tab: Suburb} %>
<% end %>

<% content_for :navigation_title do %>
  <%= render partial: "layouts/navigation_title", locals: {title: t('.title', :default => Suburb.model_name.human.pluralize.titleize)} %>
<% end %>

<% content_for :navigation_actions do %>
  <div class="btn-toolbar pull-right" role="toolbar">
    <div class="btn-group">
      <%= link_to t('.new', :default => t("helpers.links.new")), new_suburb_path, :class => 'btn btn-primary' %>
    </div>
  </div>
<% end %>

<% content_for :content do %>
<div class="container-fluid">
  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th><%= Suburb.human_attribute_name(:name) %></th>
          <th><%= Suburb.human_attribute_name(:state_id) %></th>
          <th><%= Suburb.human_attribute_name(:postcode) %></th>
        </tr>
      </thead>
      <tbody>
        <% @suburbs.each do |suburb| %>
          <tr>
            <td><%= suburb.name %></td>
            <td><%= suburb.state.name %></td>
            <td><%= suburb.postcode %></td>
            <td>
              <%= link_to(suburb) do %>
                <i class="fa fa-info-circle fa-lg"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<% end %>

<%= render template: "layouts/app" %>
