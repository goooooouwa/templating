<%- model_class = Contact -%>

<% content_for :header do %>
  <%= render partial: "layouts/header", locals: {active_tab: model_class} %>
<% end %>

<% content_for :content do %>
  <div id="navigation-view">
    <div id="navigation-bar" class="container-fluid">
      <div class="row">
        <div class="col-xs-5">
          <div class="btn-toolbar pull-left" role="toolbar">
            <div class="btn-group">
              <%= link_to company_contacts_path(@company), class: 'btn', title: "Back", data: { toggle:"tooltip", placement:"bottom" } do %>
                <i class="fa fa-chevron-left fa-3x"></i>
              <% end %>
            </div>
            <div class="btn-group">
              <h3 style="margin-top: 11px;">New contact</h3>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div id="content" class="container-fluid">
      <%= render 'form' %>
    </div>
  </div>
<% end %>

<%= render template: "layouts/app" %>
