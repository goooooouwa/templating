<%- model_class = Contact -%>

<% content_for :header do %>
  <%= render partial: "layouts/header", locals: {active_tab: model_class} %>
<% end %>

<% content_for :content do %>
  <div id="navigation-view">
    <div id="navigation-bar" class="container-fluid">
      <div class="row">
        <div class="col-xs-3">
          <h3 style="margin-top: auto;"><%= @company.name.capitalize %></h3>
        </div>
        <div class="col-xs-5">
          <%= render partial: "companies/tab_bar", locals: {active_tab: model_class.model_name.human.pluralize.titleize, company: @company} %>
        </div>
        <div class="col-xs-4">
          <div class="btn-toolbar pull-right" role="toolbar">
            <div class="btn-group">
              <%= link_to new_company_contact_path(@company), class: 'btn', title: "Add Contact", data: { toggle:"tooltip", placement:"bottom" } do %>
                <i class="fa fa-plus fa-3x"></i>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="container-fluid">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th><%= model_class.human_attribute_name(:first_name) %></th>
              <th><%= model_class.human_attribute_name(:last_name) %></th>
              <th><%= model_class.human_attribute_name(:phone) %></th>
              <th><%= model_class.human_attribute_name(:email) %></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
              <% @contacts.each do |contact| %>
              <tr>
                <td><%= contact.first_name %></td>
                <td><%= contact.last_name %></td>
                <td><%= contact.phone %></td>
                <td><%= contact.email %></td>
                <td>
                  <%= link_to(contact) do %>
                    <i class="fa fa-info-circle fa-lg"></i>
                  <% end %>
                </td>
              </tr>
              <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% end %>

<%= render template: "layouts/app" %>
