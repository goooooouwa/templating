<%- model_class = Contact -%>

<% content_for :header do %>
  <%= render partial: "layouts/header", locals: {active_tab: model_class} %>
<% end %>

<% content_for :content do %>
  <div id="navigation-view">
    <div id="navigation-bar" class="container-fluid">
      <div class="row">
        <div class="col-xs-3">
          <div class="btn-toolbar pull-left" role="toolbar">
            <% if @contact.companies.first %>
              <div class="btn-group">
                <%= link_to company_contacts_path(@contact.companies.first), class: 'btn', title: "Back", data: { toggle:"tooltip", placement:"bottom" } do %>
                  <i class="fa fa-chevron-left fa-3x"></i>
                <% end %>
              </div>
            <% else %>
              <h3 style="margin-top: auto;">Contact</h3>
            <% end %>
          </div>
        </div>
        <div class="col-xs-9">
          <div class="btn-toolbar pull-right" role="toolbar">
            <div class="btn-group">
              <%= link_to edit_contact_path(@contact) do %>
                <i class="fa fa-pencil-square-o fa-3x"></i>
              <% end %>
            </div>
            <div class="btn-group">
              <%= link_to @contact, :method => 'delete', title: "Delete Tenderer", data: { toggle:"tooltip", placement:"bottom" }, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) } do %>
                <i class="fa fa-trash-o fa-3x"></i>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div id="content" class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <div class="table-responsive">
            <table class="table">
              <tbody>
                <tr>
                  <td class="col-md-3">
                    <h4>Basic</h4>
                  </td>
                  <td class="col-md=9">
                    <dl>
                      <dt><b><%= model_class.human_attribute_name(:first_name) %></b></dt>
                      <dd><%= @contact.first_name %></dd>
                    </dl>
                    <dl>
                      <dt><b><%= model_class.human_attribute_name(:last_name) %></b></dt>
                      <dd><%= @contact.last_name %></dd>
                    </dl>
                    <dl>
                      <dt><b><%= model_class.human_attribute_name(:email) %></b></dt>
                      <dd><%= @contact.email %></dd>
                    </dl>
                    <dl>
                      <dt><b><%= model_class.human_attribute_name(:phone) %></b></dt>
                      <dd><%= @contact.phone %></dd>
                    </dl>
                  </td>
                </tr>
                <tr>
                  <td class="col-md-3">
                    <h4>Extra</h4>
                  </td>
                  <td class="col-md=9">
                    <dl>
                      <dt><b><%= model_class.human_attribute_name(:active) %></b></dt>
                      <dd><%= @contact.active %></dd>
                    </dl>
                    <dl>
                      <dt><b><%= model_class.human_attribute_name(:job_role) %></b></dt>
                      <dd><%= @contact.job_role %></dd>
                    </dl>
                    <dl>
                      <dt><b><%= model_class.human_attribute_name(:notes) %></b></dt>
                      <dd><%= @contact.notes %></dd>
                    </dl>
                    <dl>
                      <dt><b><%= model_class.human_attribute_name(:external_db_id) %></b></dt>
                      <dd><%= @contact.external_db_id %></dd>
                    </dl>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<%= render template: "layouts/app" %>
