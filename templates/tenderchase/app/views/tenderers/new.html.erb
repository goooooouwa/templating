<%- model_class = Tenderer -%>

<% content_for :header do %>
  <%= render partial: "layouts/header", locals: {active_tab: model_class} %>
<% end %>

<% content_for :content do %>
  <div id="navigation-view" ng-controller="NewTendererController" ng-init="tender_id = <%= @tender.id %>;">
    <div id="navigation-bar" class="container-fluid">
      <div class="row">
        <div class="col-xs-3">
          <div class="btn-toolbar pull-left" role="toolbar">
            <div class="btn-group">
              <%= link_to tender_tenderers_path(@tender), class: 'btn', title: "Back", data: { toggle:"tooltip", placement:"bottom" } do %>
                <i class="fa fa-chevron-left fa-3x"></i>
              <% end %>
            </div>
            <div class="btn-group">
              <h3 style="margin-top: 11px;">Add Tenderer</h3>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div id="custom-view">
      <div class="well well-sm" ng-class="{ hidden: !selectedPackages.length }">
        <strong ng-repeat="package in selectedPackages">{{ package.name }}, </strong>
      </div>
      <%= render partial: 'companies/search_bar' %>
      <%= render partial: 'companies/companies_select_sheet' %>
    </div>
  </div>
  <%= render partial: 'packages/packages_select_sheet', locals: { tender_id: @tender.id } %>
<% end %>

<%= render template: "layouts/app" %>
