<%- model_class = Package -%>

<% content_for :header do %>
  <%= render partial: "layouts/header", locals: {active_tab: model_class} %>
<% end %>

<% content_for :content do %>
  <div id="navigation-view">
    <div id="navigation-bar" class="container-fluid">
      <div class="row">
        <div class="col-xs-3">
          <h3 style="margin-top: auto;"><%= @tender.name.capitalize %></h3>
        </div>
        <div class="col-xs-5">
          <%= render partial: "tenders/tab_bar", locals: {active_tab: model_class.model_name.human.pluralize.titleize, tender: @tender} %>
        </div>
        <div class="col-xs-4">
          <div class="btn-toolbar pull-right" role="toolbar">
            <div class="btn-group">
              <%= link_to tender_documents_path(@tender), :class => 'btn', title: "Organize Packages", data: { toggle:"tooltip", placement:"bottom" } do %>
                <i class="fa fa-folder-open-o fa-3x"></i>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div id="content-view" class="container-fluid" ng-controller="PackagesListController">
      <% @packages.each do |package| %>
        <div class="panel panel-default">
          <div class="panel-heading">
            <div class="row">
              <div class="col-lg-6">
                <h4><%= package.name %></h4>
              </div>
              <div class="col-lg-6">
                <div class="btn-toolbar pull-right" role="toolbar">
                  <div class="btn-group">
                    <%= link_to 'Edit', package_documents_path(package), class: 'btn btn-primary' %>
                  </div>
                  <div class="btn-group">
                    <% if package.has_update? %>
                      <%= link_to 'Publish', publish_package_path(package), :method => :post, class: 'btn btn-success' %>
                      <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown">
                        <span class="caret"></span>
                      </button>
                      <ul class="dropdown-menu" role="menu">
                        <li><a href="#" ng-click="publishAndNotify($event, <%= package.id %>)">Publish and Notify</a></li>
                      </ul>
                    <% else %>
                      <%= link_to 'Published', '#', class: 'btn btn-default disabled' %>
                    <% end %>
                  </div>
                  <div class="btn-group">
                    <%= link_to package_path(package.id), class: 'btn btn-default', title: "Package Download Page", target:"_blank", data: { toggle:"tooltip", placement:"bottom" } do %>
                      <i class="fa fa-external-link fa-lg"></i>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="panel-body">
            <ul>
              <% package.package_documents.each do |package_document| %>
                <li>
                <span>
                  <%= package_document.document.filename %>
                  <% if package_document.has_update? %>
                    <span class="badge alert-danger">New</span>
                  <% end %>
                </span>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

<%= render template: "layouts/app" %>
