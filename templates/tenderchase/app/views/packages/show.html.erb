<%- model_class = Package -%>

<% content_for :content do %>
  <div id="custom-view">
    <h3>Package <%= @package.name %> for <%= @package.tender.name %></h3>

    <ul class="btn-group">
      <li class="btn <%= "disabled" unless @package.whats_new_share_link %>">
        <%= link_to "Download new documents", @package.whats_new_share_link, class: "btn btn-success" %>
      </li>
      <li class="btn <%= "disabled" unless @package.share_link %>">
        <%= link_to "Browse the package", @package.share_link, class: "btn btn-default" %>
      </li>
      <li class="btn <%= "disabled" unless @package.tender.share_link %>">
        <%= link_to "Browse all packages", @package.tender.share_link, class: "btn btn-default" %>
      </li>
    </ul>

    <h4>What's New</h4>
    <ul>
      <% @package.package_documents.each do |package_document| %>
        <% if package_document.updated_since_last_publish %>
          <li><%= package_document.document.filename %></li>
        <% end %>
      <% end %>
    </ul>
  </div>
<% end %>

<%= render template: "layouts/app" %>
