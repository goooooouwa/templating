<%- model_class = Trade -%>

<% content_for :header do %>
  <%= render partial: "layouts/header", locals: {active_tab: model_class} %>
<% end %>

<% content_for :content do %>
  <div id="navigation-view">
    <div id="navigation-bar" class="container-fluid">
      <div class="row">
        <div class="col-xs-3">
          <% case @parent.class.name when Tender.name %>
            <h3 style="margin-top: auto;"><%= @parent.name.capitalize %></h3>
          <% when Company.name %>
            <h3 style="margin-top: auto;"><%= @parent.name.capitalize %></h3>
          <% else %>
            <h3 style="margin-top: auto;"><%= model_class.model_name.human.pluralize.titleize %></h3>
          <% end %>
        </div>
        <div class="col-xs-5">
          <% case @parent.class.name when Tender.name %>
            <%= render partial: "tenders/tab_bar", locals: {active_tab: model_class.model_name.human.pluralize.titleize, tender: @parent} %>
          <% when Company.name %>
            <%= render partial: "companies/tab_bar", locals: {active_tab: model_class.model_name.human.pluralize.titleize, company: @parent} %>
          <% else %>
          <% end %>
        </div>
        <div class="col-xs-4">
          <div class="btn-toolbar pull-right" role="toolbar">
            <div class="btn-group">
              <% case @parent.class.name when Tender.name %>
                <%= link_to new_tender_package_path(@parent), class: "btn", title: "Add Trade", data: { toggle:"tooltip", placement:"bottom" } do %>
                  <i class="fa fa-plus fa-3x"></i>
                <% end %>
              <% when Company.name %>
                <%= link_to new_company_companies_trade_path(@parent), class: "btn", title: "Add Trade", data: { toggle:"tooltip", placement:"bottom" } do %>
                  <i class="fa fa-plus fa-3x"></i>
                <% end %>
              <% else %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="container-fluid">
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th><%= model_class.human_attribute_name(:name) %></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @trades.each do |trade| %>
              <tr>
                <td><%= trade.name %></td>
                <td>
                  <div class="btn-toolbar pull-right" role="toolbar">
                    <div class="btn-group">
                      <% case @parent.class.name when Tender.name %>
                        <%= link_to 'Remove', package_path(Package.find_by_tender_id_and_trade_id(@parent, trade)), :method => :delete, :data => { :confirm => t('.confirm', :default => t('trade.massages.destroy.confirm') ) }, :class => 'btn btn-danger' %>
                      <% when Company.name %>
                        <%= link_to 'Remove', companies_trade_path(CompaniesTrade.find_by_company_id_and_trade_id(@parent, trade)), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger' %>
                      <% else %>
                      <% end %>
                    </div>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% end %>

<%= render template: "layouts/app" %>
