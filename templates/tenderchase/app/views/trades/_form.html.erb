<%= form_for [@tender, @trade], :html => { :class => 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :active, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :active, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :alternative_sort_order, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :alternative_sort_order, :class => 'form-control' %>
    </div>
  </div>

  
  <%= f.submit 'Add Trade', :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            tender_trades_path, :class => 'btn btn-default' %>
 
<% end %>
