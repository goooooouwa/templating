<div id="trades-list" class="modal fade" ng-controller="TradesListController">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Move to:</h4>
      </div>
      <div class="modal-body">
        <strong ng-repeat="trade in trades | filter: {selected:true} ">{{ trade.name }},</strong>
        <table class="table table-hover table-condensed">
          <tbody>
              <tr class="{{ trade.selected | active }}" ng-repeat="trade in trades">
                <td>
                  <input type="checkbox" ng-model="trade.selected">
                </td>
                <td><p>{{ trade.name }}</p></td>
              </tr>
          </tbody>
        </table>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" ng-click="dispatch()" >Done</button>
      </div>
    </div>
  </div>
</div>
