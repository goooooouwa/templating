<%- model_class = Document -%>

<% content_for :header do %>
  <%= render partial: "layouts/header", locals: {active_tab: model_class} %>
<% end %>

<% content_for :content do %>
  <% case @parent.class.name when Tender.name %>
    <div id="navigation-view" ng-controller="DocumentsListController" ng-init="tender_id = <%= @parent.id %>;">
    <% else %>
      <div id="navigation-view">
      <% end %>
    <div id="navigation-bar" class="container-fluid">
      <div class="row">
        <% case @parent.class.name when Tender.name %>
          <div class="col-xs-3">
            <h3 style="margin-top: auto;"><%= @parent.name.capitalize %></h3>
          </div>
        <% when Package.name %>
          <div class="col-xs-6">
            <div class="btn-toolbar pull-left" role="toolbar">
              <div class="btn-group">
                <%= link_to tender_packages_path(@parent.tender), class: 'btn', title: "Back", data: { toggle:"tooltip", placement:"bottom" } do %>
                  <i class="fa fa-chevron-left fa-3x"></i>
                <% end %>
              </div>
              <div class="btn-group">
                <h3 style="margin-top: 11px;"><%= @parent.name.capitalize %></h3>
              </div>
            </div>
          </div>
        <% else %>
          <div class="col-xs-3">
            <h3 style="margin-top: auto;"><%= model_class.model_name.human.pluralize.titleize %></h3>
          </div>
        <% end %>
        <% case @parent.class.name when Tender.name %>
          <div class="col-xs-5">
            <%= render partial: "tenders/tab_bar", locals: {active_tab: model_class.model_name.human.pluralize.titleize, tender: @parent} %>
          </div>
        <% else %>
        <% end %>
        <% case @parent.class.name when Tender.name %>
          <div class="col-xs-4">
            <div class="btn-toolbar pull-right" role="toolbar">
              <div class="btn-group">
                <%= link_to new_tender_document_path, class: 'btn', title: "Upload Document", data: { toggle:"tooltip", placement:"bottom" } do %>
                  <i class="fa fa-arrow-circle-o-up fa-3x"></i>
                <% end %>
              </div>
            </div>
          </div>
        <% else %>
        <% end %>
      </div>
    </div>
    <div id="custom-view">
      <% case @parent.class.name when Tender.name %>
        <div class="well well-sm" ng-class="{ hidden: !selectedPackages.length }">
          <strong ng-repeat="package in selectedPackages">{{ package.name }}, </strong>
        </div>
      <% else %>
      <% end %>
      <div class="container-fluid">
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th></th>
                <th><%= model_class.human_attribute_name(:filename) %></th>
                <th><%= model_class.human_attribute_name(:document_type_id) %></th>
                <th>
                  <div class="btn-group">
                    <% case @parent.class.name when Tender.name %>
                      <a href="#" class="btn btn-primary" data-toggle="modal" data-target="#packages-select-sheet">Move To</a>
                    <% else %>
                    <% end %>
                  </div>
                </th>
              </tr>
            </thead>
            <tbody>
              <% case @parent.class.name when Tender.name %>
                <tr class="document-row {{ document.selected | active }}" ng-repeat="document in documents">
                  <td>
                    <input type="checkbox" ng-model="document.selected">
                  </td>
                  <td>{{ document.filename }}</td>
                  <td>{{ document.document_type.name }}</td>
                  <td>
                    <a ng-href="/documents/{{ document.id }}"><i class="fa fa-info-circle fa-lg"></i></a>
                  </td>
                </tr>
              <% when Package.name %>
                <% @documents.each do |document| %>
                  <tr class="document-row">
                    <td><%= document.filename %></td>
                    <td><%= document.document_type.name %></td>
                    <td>
                      <%= link_to 'Remove', remove_package_path(@parent, {document_id: document.id}), :method => 'delete', class: "btn btn-danger", title: "Remove document from package", data: { toggle:"tooltip", placement:"bottom" }, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) } %>
                    </td>
                  </tr>
                <% end %>
              <% else %>
                <% @documents.each do |document| %>
                  <tr class="document-row">
                    <td><%= document.filename %></td>
                    <td><%= document.document_type.name %></td>
                    <td>
                      <%= link_to 'Remove', document, :method => 'delete', class: "btn btn-danger", title: "Delete document", data: { toggle:"tooltip", placement:"bottom" }, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) } %>
                    </td>
                  </tr>
                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <% case @parent.class.name when Tender.name %>
    <%= render partial: 'packages/packages_select_sheet', locals: { tender_id: @parent.id } %>
  <% else %>
  <% end %>
<% end %>

<%= render template: "layouts/app" %>
