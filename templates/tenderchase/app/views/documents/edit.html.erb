<%- model_class = Document -%>

<% content_for :header do %>
  <%= render partial: "layouts/header", locals: {active_tab: model_class} %>
<% end %>

<% content_for :content do %>
  <div id="navigation-view">
    <div id="navigation-bar" class="container-fluid">
      <div class="row">
        <div class="col-xs-3">
          <h3 style="margin-top: auto;"><%= t('.title', :default => [:'helpers.titles.edit', 'Edit %{model}'], :model => model_class.model_name.human.titleize) %></h3>
        </div>
        <div class="col-xs-9">
          <div class="btn-toolbar pull-right" role="toolbar">
            <div class="btn-group">
              <%= link_to t('.cancel', :default => t("helpers.links.cancel")), @document, :class => 'btn btn-default' %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div id="content" class="container-fluid">
      <div class="table-responsive" ng-controller="EditDocumentController" ng-init="document.id = <%= @document.id %>;">
        <table class="table table-striped table-condensed">
          <tbody>
            <tr>
              <%= render 'form' %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% end %>

<%= render template: "layouts/app" %>
