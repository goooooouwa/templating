<%- model_class = Document -%>

<% content_for :header do %>
  <%= render partial: "layouts/header", locals: {active_tab: model_class} %>
<% end %>

<% content_for :content do %>
  <div id="navigation-view">
    <div id="navigation-bar" class="container-fluid">
      <div class="row">
        <div class="col-xs-3">
          <div class="btn-toolbar pull-left" role="toolbar">
            <div class="btn-group">
              <%= link_to tender_documents_path(@document.tender), class: 'btn', title: "Back", data: { toggle:"tooltip", placement:"bottom" } do %>
                <i class="fa fa-chevron-left fa-3x"></i>
              <% end %>
            </div>
          </div>
        </div>
        <div class="col-xs-9">
          <div class="btn-toolbar pull-right" role="toolbar">
            <div class="btn-group">
              <%= link_to edit_document_path(@document) do %>
                <i class="fa fa-pencil-square-o fa-3x"></i>
              <% end %>
            </div>
            <div class="btn-group">
              <%= link_to @document, :method => 'delete', title: "Delete Tenderer", data: { toggle:"tooltip", placement:"bottom" }, :data => { :confirm => t('.confirm', :default => t('document.massages.destroy.confirm')) } do %>
                <i class="fa fa-trash-o fa-3x"></i>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div id="content" class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <div class="table-responsive">
            <table class="table">
              <tbody>
                <tr>
                  <td class="col-md-3">
                    <h4>Basic</h4>
                  </td>
                  <td class="col-md=9">
                    <dl>
                      <dt><b>Filename</b></dt>
                      <dd><%= @document.filename %></dd>
                    </dl>
                    <dl>
                      <dt><b><%= model_class.human_attribute_name(:document_type_id) %></b></dt>
                      <dd><%= @document.document_type.name %></dd>
                    </dl>
                  </td>
                </tr>
                <tr>
                  <td class="col-md-3">
                    <h4>Detail</h4>
                  </td>
                  <td class="col-md=9">
                    <dl>
                      <dt><b><%= model_class.human_attribute_name(:tender_id) %></b></dt>
                      <dd><%= @document.tender.name %></dd>
                    </dl>
                    <dl>
                      <dt><b><%= model_class.human_attribute_name(:document_id) %></b></dt>
                      <dd><%= @document.document_id %></dd>
                    </dl>
                    <dl>
                      <dt><b><%= model_class.human_attribute_name(:description) %></b></dt>
                      <dd><%= @document.description %></dd>
                    </dl>
                    <dl>
                      <dt><b><%= model_class.human_attribute_name(:latest_version) %></b></dt>
                      <dd><%= @document.latest_version %></dd>
                    </dl>
                    <dl>
                      <dt><b><%= model_class.human_attribute_name(:addendum) %></b></dt>
                      <dd><%= @document.addendum %></dd>
                    </dl>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<%= render template: "layouts/app" %>
