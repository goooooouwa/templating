<h1>Listing calls</h1>

<table>
  <thead>
    <tr>
      <th>Tenderer</th>
      <th>Contact</th>
      <th>Note</th>
      <th>Created at</th>
      <th>Updated at</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @calls.each do |call| %>
      <tr>
        <td><%= call.tenderer %></td>
        <td><%= call.contact %></td>
        <td><%= call.note %></td>
        <td><%= call.created_at %></td>
        <td><%= call.updated_at %></td>
        <td><%= link_to 'Show', call %></td>
        <td><%= link_to 'Edit', edit_call_path(call) %></td>
        <td><%= link_to 'Destroy', call, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

