<div class="panel panel-default">
  <div class="panel-heading">
    <div class="row">
      <div class="col-lg-3">
        <h4>Call history</h4>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <ul class="list-group">
        <li class="list-group-item" ng-repeat="call in tenderer.calls | limitTo:4 ">
        <div class="list-group-item-heading">
          <b>{{ call.user.name }}</b>
          <span class="pull-right">{{ call.created_at }}</span>
        </div>
        <p class="list-group-item-text">Note: {{ call.note }}</p>
        </li>
        <li class="list-group-item"><a ng-href="/tenderers/{{ tenderer.id }}">View full history</a></li>
      </ul>
    </div>
  </div>
</div>
