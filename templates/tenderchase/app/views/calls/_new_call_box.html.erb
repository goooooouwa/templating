<div id="new-call-box" class="modal fade" ng-controller="NewCallBoxController">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Call to {{ call.contact.full_name }}({{ call.contact.phone }})</h4>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <textarea id="call-note" class="form-control" rows="3" placeholder="leave a note..." ng-model="call.note"></textarea>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" data-dismiss="modal" ng-click="done($event)" >Done</button>
      </div>
    </div>
  </div>
</div>
