<%- model_class = Company -%>

<% content_for :header do %>
  <%= render partial: "layouts/header", locals: {active_tab: model_class} %>
<% end %>

<% content_for :content do %>
  <div id="navigation-view">
    <div id="navigation-bar" class="container-fluid">
      <div class="row">
        <div class="col-xs-5">
          <h3 style="margin-top: auto;"><%= t('.title', :default => model_class.model_name.human.pluralize.titleize) %></h3>
        </div>
        <div class="col-xs-7">
          <div class="btn-toolbar pull-right" role="toolbar">
            <div class="btn-group">
              <%= link_to t('.new', :default => t("helpers.links.new")), new_company_path, :class => 'btn btn-primary', title: "New Company", data: { toggle:"tooltip", placement:"bottom" } %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div id="custom-view">
      <%= render partial: 'companies/search_bar' %>
      <div class="container-fluid" ng-controller="CompaniesListController">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th><%= model_class.human_attribute_name(:name) %></th>
                <th><%= model_class.human_attribute_name(:contact) %></th>
                <th><%= model_class.human_attribute_name(:phone) %></th>
                <th><%= model_class.human_attribute_name(:email) %></th>
                <th><%= model_class.human_attribute_name(:address) %></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <tr ng-repeat="company in companies">
                <td>{{ company.name }}</td>
                <td>{{ company.contacts[0].full_name }}</td>
                <td>{{ company.contacts[0].phone }}</td>
                <td>{{ company.contacts[0].email }}</td>
                <td>{{ company.full_street_address }}</td>
                <td>
                  <a ng-href="/companies/{{ company.id }}"><i class="fa fa-info-circle fa-lg"></i></a>
                </td>
              </tr>
              <tr>
                <td colspan="6">
                  <div class="row">
                    <div class="col-lg-2 col-lg-offset-5">
                      <tc-pagination></tc-pagination>
                    </div>
                  </div>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
<% end %>

<%= render template: "layouts/app" %>
