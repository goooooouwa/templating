<%- model_class = Company -%>

<% content_for :header do %>
  <%= render partial: "layouts/header", locals: {active_tab: model_class} %>
<% end %>

<% content_for :content do %>
  <div id="navigation-view">
    <div id="navigation-bar" class="container-fluid">
      <div class="row">
        <div class="col-xs-3">
          <h3 style="margin-top: auto;"><%= t('.title', :default => model_class.model_name.human.titleize) %></h3>
        </div>
        <div class="col-xs-5">
          <%= render partial: "tab_bar", locals: {active_tab: 'Info', company: @company} %>
        </div>
        <div class="col-xs-4">
          <div class="btn-toolbar pull-right" role="toolbar">
            <div class="btn-group">
              <%= link_to edit_company_path(@company) do %>
                <i class="fa fa-pencil-square-o fa-3x"></i>
              <% end %>
            </div>
            <div class="btn-group">
              <%= link_to deactivate_company_path(@company), :method => 'put', title: "Deactivate Company", :data => { toggle:"tooltip", placement:"bottom", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) } do %>
                <i class="fa fa-power-off fa-3x"></i>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <div class="table-responsive">
            <table class="table">
              <tbody>
                <tr>
                  <td class="col-md-3">
                    <h4>Basic</h4>
                  </td>
                  <td class="col-md=9">
                    <dl>
                      <dt><strong><%= Company.human_attribute_name(:name) %></strong></dt>
                      <dd><%= @company.name %></dd>
                    </dl>
                  </td>
                </tr>
                <tr>
                  <td class="col-md-3">
                    <h4>Status</h4>
                  </td>
                  <td class="col-md=9">
                    <dl>
                      <dt><strong><%= Company.human_attribute_name(:active) %></strong></dt>
                      <dd><%= @company.active %></dd>
                    </dl>
                    <dl>
                      <dt><strong><%= Company.human_attribute_name(:notes) %></strong></dt>
                      <dd><%= @company.notes %></dd>
                    </dl>
                    <dl>
                      <dt><strong><%= Company.human_attribute_name(:problematic) %></strong></dt>
                      <dd><%= @company.problematic %></dd>
                    </dl>
                    <dl>
                      <dt><strong><%= Company.human_attribute_name(:review) %></strong></dt>
                      <dd><%= @company.review %></dd>
                    </dl>
                  </td>
                </tr>
                <tr>
                  <td class="col-md-3">
                    <h4>Contact</h4>
                  </td>
                  <td class="col-md=9">
                    <dl>
                      <dt><strong><%= Company.human_attribute_name(:phone) %></strong></dt>
                      <dd><%= @company.phone %></dd>
                    </dl>
                    <dl>
                      <dt><strong><%= Company.human_attribute_name(:mobile) %></strong></dt>
                      <dd><%= @company.mobile %></dd>
                    </dl>
                    <dl>
                      <dt><strong><%= Company.human_attribute_name(:fax) %></strong></dt>
                      <dd><%= @company.fax %></dd>
                    </dl>
                  </td>
                </tr>
                <tr>
                  <td class="col-md-3">
                    <h4>Address</h4>
                  </td>
                  <td class="col-md=9">
                    <dl>
                      <dt><strong><%= Company.human_attribute_name(:address_line) %></strong></dt>
                      <dd><%= @company.address_line %></dd>
                    </dl>
                    <dl>
                      <dt><strong><%= Company.human_attribute_name(:state_id) %></strong></dt>
                      <dd><%= @company.state.abbreviation %></dd>
                    </dl>
                    <dl>
                      <dt><strong><%= Company.human_attribute_name(:suburb_id) %></strong></dt>
                      <dd><%= @company.suburb.name %></dd>
                    </dl>
                    <dl>
                      <dt><strong><%= Company.human_attribute_name(:postcode) %></strong></dt>
                      <dd><%= @company.postcode %></dd>
                    </dl>
                  </td>
                </tr>
                <tr>
                  <td class="col-md-3">
                    <h4>Extra</h4>
                  </td>
                  <td class="col-md=9">
                    <dl>
                      <dt><strong><%= Company.human_attribute_name(:external_db_id) %></strong></dt>
                      <dd><%= @company.external_db_id %></dd>
                    </dl>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<%= render template: "layouts/app" %>
