<%- model_class = Employee -%>

<% content_for :header do %>
  <%= render partial: "layouts/header", locals: {active_tab: model_class} %>
<% end %>

<% content_for :content do %>
  <div id="navigation-view">
    <div id="navigation-bar" class="container-fluid">
      <div class="row">
        <div class="col-xs-3">
          <h3 style="margin-top: auto;"><%= t('.title', :default => model_class.model_name.human.titleize) %></h3>
        </div>
        <div class="col-xs-9">
          <div class="btn-toolbar pull-right" role="toolbar">
            <div class="btn-group">
              <%= link_to edit_employee_path(@employee) do %>
                <i class="fa fa-pencil-square-o fa-3x"></i>
              <% end %>
            </div>
            <div class="btn-group">
              <%= link_to @employee, :method => 'delete', :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) } do %>
                <i class="fa fa-trash-o fa-3x"></i>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div id="content" class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <div class="table-responsive">
            <table class="table table-striped table-bordered">
              <tbody>
                <tr>
                  <td><strong><%= Employee.human_attribute_name(:active) %></strong></td>
                  <td><%= @employee.active %></td>
                </tr>
                <tr>
                  <td><strong><%= Employee.human_attribute_name(:first_name) %></strong></td>
                  <td><%= @employee.first_name %></td>
                </tr>
                <tr>
                  <td><strong><%= Employee.human_attribute_name(:last_name) %></strong></td>
                  <td><%= @employee.last_name %></td>
                </tr>
                <tr>
                  <td><strong><%= Employee.human_attribute_name(:email) %></strong></td>
                  <td><%= @employee.email %></td>
                </tr>
                <tr>
                  <td><strong><%= Employee.human_attribute_name(:employment_type_id) %></strong></td>
                  <td><%= @employee.employment_type.name %></td>
                </tr>
                <tr>
                  <td><strong><%= Employee.human_attribute_name(:employee_role_id) %></strong></td>
                  <td><%= @employee.employee_role.name %></td>
                </tr>
                <tr>
                  <td><strong><%= Employee.human_attribute_name(:state_id) %></strong></td>
                  <td><%= @employee.state.name %></td>
                </tr>
                <tr>
                  <td><strong><%= Employee.human_attribute_name(:office_id) %></strong></td>
                  <td><%= @employee.office.name %></td>
                </tr>
                <tr>
                  <td><strong><%= Employee.human_attribute_name(:department_id) %></strong></td>
                  <td><%= @employee.department_id %></td>
                </tr>
                <tr>
                  <td><strong><%= Employee.human_attribute_name(:phone) %></strong></td>
                  <td><%= @employee.phone %></td>
                </tr>
                <tr>
                  <td><strong><%= Employee.human_attribute_name(:mobile) %></strong></td>
                  <td><%= @employee.mobile %></td>
                </tr>
                <tr>
                  <td><strong><%= Employee.human_attribute_name(:external_id) %></strong></td>
                  <td><%= @employee.external_id %></td>
                </tr>
                <tr>
                  <td><strong><%= Employee.human_attribute_name(:created_at) %></strong></td>
                  <td><%= @employee.created_at %></td>
                </tr>
                <tr>
                  <td><strong><%= Employee.human_attribute_name(:updated_at) %></strong></td>
                  <td><%= @employee.updated_at %></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<%= render template: "layouts/app" %>
