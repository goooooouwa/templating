<%- model_class = Employee -%>

<% content_for :header do %>
  <%= render partial: "layouts/header", locals: {active_tab: model_class} %>
<% end %>

<% content_for :content do %>
  <div id="navigation-view">
    <div id="navigation-bar" class="container-fluid">
      <div class="row">
        <div class="col-xs-5">
          <h3 style="margin-top: auto;"><%= t('.title', :default => model_class.model_name.human.pluralize.titleize) %></h3>
        </div>
        <div class="col-xs-7">
          <div class="btn-toolbar pull-right" role="toolbar">
            <div class="btn-group">
              <%= link_to t('.new', :default => t("helpers.links.new")), new_employee_path, :class => 'btn btn-primary', title: "New Employee", data: { toggle:"tooltip", placement:"bottom" } %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="container-fluid">
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th><%= Employee.human_attribute_name(:first_name) %></th>
              <th><%= Employee.human_attribute_name(:last_name) %></th>
              <th><%= Employee.human_attribute_name(:employee_role_id) %></th>
            </tr>
          </thead>
          <tbody>
            <% @employees.each do |employee| %>
              <tr>
                <td><%= employee.first_name %></td>
                <td><%= employee.last_name %></td>
                <td><%= employee.employee_role.name %></td>
                <td>
                  <%= link_to(employee) do %>
                    <i class="fa fa-info-circle fa-lg"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% end %>

<%= render template: "layouts/app" %>
