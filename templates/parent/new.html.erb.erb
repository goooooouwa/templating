<%%- model_class = <%= "#{namespace}::#{model_class}" %> -%>

<%% content_for :header do %>
  <%%= render partial: "layouts/header", locals: {active_tab: model_class} %>
<%% end %>

<%% content_for :content do %>
  <div id="navigation-view">
    <div id="navigation-bar" class="container-fluid">
      <div class="row">
        <div class="col-xs-3">
          <h3 style="margin-top: auto;"><%%= t('.title', :default => [:'helpers.titles.new', 'New %{model}'], :model => model_class.model_name.human.titleize) %></h3>
        </div>
        <div class="col-xs-9">
          <div class="btn-toolbar pull-right" role="toolbar">
            <div class="btn-group">
              <%%= link_to t('.cancel', :default => t("helpers.links.cancel")), <%= "#{model_class.pluralize}_path".underscore %>, :class => 'btn btn-default' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <%%= render :partial => 'form' %>
  </div>
<%% end %>

<%%= render template: "layouts/app" %>
