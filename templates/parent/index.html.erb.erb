<%%- model_class = <%= NB %> -%>

<%% content_for :header do %>
  <%%= render partial: "layouts/header", locals: {active_tab: model_class} %>
<%% end %>

<%% content_for :content do %>
  <div id="navigation-view">
    <div id="navigation-bar" class="container-fluid">
      <div class="row">
        <div class="col-xs-5">
          <h3 style="margin-top: auto;"><%%= t('.title', :default => model_class.model_name.human.pluralize.titleize) %></h3>
        </div>
        <div class="col-xs-7">
          <div class="btn-toolbar pull-right" role="toolbar">
            <div class="btn-group">
              <%%= link_to t('.new', :default => t("helpers.links.new")), new_<%= b %>_path, :class => 'btn btn-primary', title: "New <%= B %>", data: { toggle:"tooltip", placement:"bottom" } %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div id="custom-view">
      <div class="container-fluid">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <%- b_attributes.each do |attribute_name| -%>
                <th><%%= model_class.human_attribute_name(:<%= attribute_name %>) %></th>
                <%- end -%>
              </tr>
            </thead>
            <tbody>
              <%% @<%= bs %>.each do |<%= b %>| %>
              <tr>
              <%- b_attributes.each do |attribute_name| -%>
                <td><%%= <%= b %>.<%= attribute_name %> %></td>
              <%- end -%>
                <td>
                  <%%= link_to <%= b %>_path(<%= b %>) do %>
                    <i class="fa fa-info-circle fa-lg"></i>
                  <%% end %>
                </td>
              </tr>
              <%% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
<%% end %>

<%%= render template: "layouts/app" %>
