<%%- model_class = Tender -%>

<%% content_for :header do %>
  <%%= render partial: "layouts/header", locals: {active_tab: model_class} %>
<%% end %>

<%% content_for :content do %>
  <div id="navigation-view">
    <div id="navigation-bar" class="container-fluid">
      <div class="row">
        <div class="col-xs-5">
          <h3 style="margin-top: auto;"><%%= t('.title', :default => model_class.model_name.human.pluralize.titleize) %></h3>
        </div>
        <div class="col-xs-7">
          <div class="btn-toolbar pull-right" role="toolbar">
            <div class="btn-group">
              <%%= link_to t('.new', :default => t("helpers.links.new")), new_tender_path, :class => 'btn btn-primary', title: "New Tender", data: { toggle:"tooltip", placement:"bottom" } %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div id="custom-view">
      <%%= render partial: "search_bar" %>
      <div class="container-fluid" ng-controller="TendersListController">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th><%%= model_class.human_attribute_name(:name) %></th>
                <th><%%= model_class.human_attribute_name(:suburb_id) %></th>
                <th><%%= model_class.human_attribute_name(:client_group_id) %></th>
                <th><%%= model_class.human_attribute_name(:closing_at) %></th>
                <th><%%= model_class.human_attribute_name(:status_id) %></th>
              </tr>
            </thead>
            <tbody>
              <tr ng-repeat="tender in tenders">
                <td>{{ tender.name }}</td>
                <td>{{ tender.suburb.name }}</td>
                <td>{{ tender.client_group.name }}</td>
                <td>{{ tender.closing_at }}</td>
                <td><span class="label {{ tender.status.human_short | status }}" title="{{ tender.status.human }}" data-toggle="tooltip" data-placement="bottom">{{ tender.status.human_short }}</span></td>
                <td>
                  <a ng-href="/tenders/{{ tender.id }}"><i class="fa fa-info-circle fa-lg"></i></a>
                </td>
              </tr>
              <tr>
                <td colspan="5">
                  <div class="row">
                    <div class="col-lg-2 col-lg-offset-5">
                      <tc-pagination></tc-pagination>
                    </div>
                  </div>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
<%% end %>

<%%= render template: "layouts/app" %>
