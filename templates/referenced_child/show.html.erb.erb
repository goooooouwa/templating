<%%- model_class = <%= "#{namespace}::#{model_class}" %> -%>

<%% content_for :header do %>
  <%%= render partial: "layouts/header", locals: {active_tab: model_class} %>
<%% end %>

<%% content_for :content do %>
  <div id="navigation-view">
    <div id="navigation-bar" class="container-fluid">
      <div class="row">
        <div class="col-xs-3">
          <div class="btn-toolbar pull-left" role="toolbar">
            <div class="btn-group">
              <%%= link_to <%= "#{parent_model_class}_#{model_class.pluralize}".underscore %>_path(<%= "@#{model_instance}.#{parent_model_class}".underscore %>), class: 'btn', title: "Back", data: { toggle:"tooltip", placement:"bottom" } do %>
                <i class="fa fa-chevron-left fa-3x"></i>
              <%% end %>
            </div>
          </div>
        </div>
        <div class="col-xs-9">
          <div class="btn-toolbar pull-right" role="toolbar">
            <div class="btn-group">
              <%%= link_to edit_<%= model_class.underscore %>_path(<%= "@#{model_instance}" %>) do %>
                <i class="fa fa-pencil-square-o fa-3x"></i>
              <%% end %>
            </div>
            <div class="btn-group">
              <%%= link_to <%= model_class.underscore %>_path(<%= "@#{model_instance}" %>), :method => 'delete', title: "Delete <%= model_class.capitalize %>", :data => { toggle:"tooltip", placement:"bottom", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) } do %>
                <i class="fa fa-trash-o fa-3x"></i>
              <%% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div id="content" class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <div class="table-responsive">
            <table class="table">
              <tbody>
                <%- grouped_model_attributes.each do |group_name, attributes| -%>
                <tr>
                  <td class="col-md-3">
                    <h4><%= group_name.capitalize %></h4>
                  </td>
                  <td class="col-md=9">
                    <%- attributes.each do |attribute_name| -%>
                    <dl>
                      <dt><strong><%%= model_class.human_attribute_name(:<%= attribute_name %>) %></strong></dt>
                      <dd><%%= <%= "@#{model_instance}.#{attribute_name}" %> %></dd>
                    </dl>
                    <%- end -%>
                  </td>
                </tr>
                <%- end -%>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
<%% end %>

<%%= render template: "layouts/app" %>
